<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controllers.DashboardController"
            stylesheets="@style.css">

    <!-- Title -->
    <Label text="Tableau de bord"
           styleClass="header-label"
           layoutX="20" layoutY="20"/>

    <!-- Cards Row -->
    <HBox spacing="20" layoutX="20" layoutY="70">
        <!-- Total Users Card -->
        <VBox styleClass="card" prefWidth="200" prefHeight="100" alignment="CENTER">
            <Label text="Total Utilisateurs" styleClass="card-title"/>
            <Label fx:id="totalUsersLabel" text="0" styleClass="card-value"/>
        </VBox>
        <!-- Active Users Card -->
        <VBox styleClass="card" prefWidth="200" prefHeight="100" alignment="CENTER">
            <Label text="Utilisateurs Actifs" styleClass="card-title"/>
            <Label fx:id="activeUsersLabel" text="0" styleClass="card-value"/>
        </VBox>
    </HBox>
</AnchorPane>
